<script id="main" type="text/template">
<div class="b_market">
            <span class="b_title">
                货币行情
            </span>
            <ul class="b_market_con b_flex">
                {{~ it:value:index}}
                <li class="b_item" tapmode data-index="{{= value.id}}">
                    <div class="b_market_hd">
                        <span class="b_name">
                            {{= value.bname}}
                        </span>
                        <span class="b_des"> {{= value.bchinesename}} </span>
                    </div>
                    <div class="b_market_bd">
                        <span class="b_currentPriceD">{{= value.bcurrentprice}} </span>
                        <span class="b_currentPriceY">{{= value.brisenum}}</span>
                    </div>
                    <div class="b_market_footer orange">
                        {{= value.briseprecent}}
                    </div>
                </li>
                {{~}}
            </ul>
        </div>
</script>

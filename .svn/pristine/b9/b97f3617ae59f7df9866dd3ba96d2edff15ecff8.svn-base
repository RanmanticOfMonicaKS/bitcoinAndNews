    <style>
        .b_swiper {
            margin-bottom: 10px;
        }
        .swiper-slide {
            position: relative;
            border-radius: 10px;
            float: left;
        }
        .swiper-slide  img {
            border-radius: 10px;
            width: 100%;
            height: auto;
        }
        .swiper-slide .tips {
            position: absolute;
            padding-left: 10px;
            width: 100%;
            height: 30px;
            bottom: 3px;
            background-color: rgba(0, 0, 0, 0.3);
            color:#fff;
            text-align: left;
            line-height: 30px;
            border-radius: 0 0 10px 10px;
        }
        .swiper-container-horizontal>.swiper-pagination-bullets, .swiper-pagination-custom, .swiper-pagination-fraction {
        bottom: 10px;
        left: 0;    
    }
    .swiper-pagination-bullet-active {
        background-color: #f79604;
    }
    .swiper-pagination-bullets {
        text-align: right;
        padding-right: 10px;
    }


    .b_market_con {
        margin-bottom: 10px;
        height: 350px;
        padding: 10px;
    }
    .b_market_con >li {
        position: relative;
        padding: 3px;
        width: 30%;
        height: 100px;
        border: 1px solid #666;
        border-radius: 5px;
        background-color: #020202;
        font-size: 12px;
        text-align: center;
        line-height: 20px;
        
    }
    .b_market_hd {
        height: 30px;
        border-radius: 5px 5px 0 0 ;
        text-align: center;
        font-size: 12px;
    }
    .b_des {
        font-size: 10px;
    }
    .b_name {
        color:#fff;
        font-weight: 700;
    }
    .b_des {
        color:#ccc;
    }
    .b_market_footer {
        position: absolute;
        bottom: 0;
        left: 0;
        border-radius: 0 0 5px 5px;
        font-size: 16px;
        width: 100%;
    }
    .b_market_footer.red {
        background-color: red;
    }
    .b_market_footer.green {
        background-color: green;
    }
    .b_market_footer.orange {
        background-color: orange;
        color:teal;
    }
    .b_currentPriceD {
        font-size: 18px;
        color:tomato;
        
    }

    .b_currentPriceY {
        color:#ccc;
    }
    </style>
</head>


<script>
    apiready = function(){
        $api.fixStatusBar($api.dom('.header'));
        fixHeight();
        marketTemp();
        marketClick();
        imgClik();
    }
        const marketClick = () => {
            $('.main').on('click','.b_item',function(){
                let id = $(this).data('index');
                openDetail(id);
            })
        }
        const openDetail = (id) => {
            api.openWin({
                name: 'b_market_detail',
                url: 'b_market_detail.html',
                bounces: false,
                pageParam: {id},
            });
        }

        const imgClik = () => {
            $('.swiper-slide').on('click',function(){
                let id = $(this).data('index');
                api.openWin({
                    name: 'b_kownledge',
                    url: 'b_kownledge.html',
                    pageParam: {id}
                });
            })
        }
         // 渲染 行情部分
        const marketTemp = () =>{
            
            let url = b_url+'bitcoin/getBitcoin.bq';
            let data = {
                body:{
                    bq_param:{

                    }
                }
            }
            b_data_page(url,data);
        }
</script>
